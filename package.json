{
    "name": "crossmint-sdk",
    "private": true,
    "repository": "https://github.com/Crossmint/crossmint-sdk",
    "license": "Apache-2.0",
    "author": "Paella Labs Inc",
    "scripts": {
        "build": "pnpm -r build",
        "build:apps": "pnpm --filter \"./apps/**\" build",
        "build:libs": "pnpm --filter \"./packages/**\" build",
        "change:add": "pnpm changeset add",
        "change:publish": "pnpm build:libs && pnpm changeset publish --no-git-tag",
        "change:version": "pnpm changeset version",
        "clean:dist": "pnpm rimraf \"**/dist\" --glob",
        "clean:next": "pnpm rimraf \"**/.next\" --glob",
        "clean:node_modules": "pnpm dlx rimraf \"**/node_modules\" --glob",
        "lint": "eslint --ext .ts .",
        "lint:fix": "eslint --fix --ext .ts .",
        "prepare": "husky",
        "prettier:check": "prettier --check \"{*,**/*}.{js,ts,jsx,tsx,json,mdx}\" --ignore-unknown",
        "prettier:write": "prettier --write \"{*,**/*}.{js,ts,jsx,tsx,json,mdx}\" --ignore-unknown",
        "publish": "lerna publish from-package",
        "test": "lerna run test"
    },
    "lint-staged": {
        "**/*.+(js|json|md|mdx|ts|tsx)": "prettier --write",
        "**/package.json": "sort-package-json"
    },
    "devDependencies": {
        "@changesets/cli": "2.27.1",
        "@crossmint/npm-scripts": "workspace:*",
        "@crossmint/tsconfig": "workspace:*",
        "@crossmint/tsupconfig": "workspace:*",
        "@testing-library/jest-dom": "6.1.3",
        "@testing-library/react": "14.0.0",
        "@trivago/prettier-plugin-sort-imports": "4.2.0",
        "@types/eslint": "8.44.2",
        "@types/eslint-plugin-prettier": "3.1.0",
        "@types/jest": "29.5.4",
        "@types/node": "20.12.7",
        "@types/prettier": "2.7.3",
        "@typescript-eslint/eslint-plugin": "6.7.0",
        "@typescript-eslint/parser": "6.7.0",
        "cross-env": "7.0.3",
        "eslint": "8.49.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-unused-imports": "2.0.0",
        "gh-pages": "6.0.0",
        "husky": "9.0.11",
        "jest": "29.6.4",
        "jest-environment-jsdom": "29.6.4",
        "lerna": "6.6.2",
        "lint-staged": "15.2.7",
        "prettier": "2.8.8",
        "rimraf": "6.0.1",
        "shx": "0.3.4",
        "sort-package-json": "2.10.0",
        "ts-jest": "29.1.1",
        "tsup": "8.1.0",
        "typescript": "5.5.3",
        "vitest": "1.0.2"
    },
    "packageManager": "pnpm@9.3.0",
    "engines": {
        "node": ">=20.12.2 <21",
        "npm": "please-use-pnpm",
        "pnpm": ">=9",
        "yarn": "please-use-pnpm"
    }
}
