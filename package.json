{
    "name": "crossmint-sdk",
    "version": "0.0.5",
    "private": true,
    "repository": "https://github.com/Crossmint/crossmint-sdk",
    "license": "Apache-2.0",
    "author": "Paella Labs Inc",
    "type": "module",
    "workspaces": {
        "packages": [
            "packages/**/*"
        ]
    },
    "scripts": {
        "build": "lerna run build",
        "changesets:publish": "yarn build && yarn changeset publish --no-git-tag",
        "clean": "lerna run clean",
        "deploy": "yarn deploy:docs && yarn deploy:example",
        "deploy:docs": "yarn docs && gh-pages --dist docs --dotfiles",
        "deploy:example": "gh-pages --dist packages/client/starters/example/out --dest example --dotfiles",
        "docs": "shx rm -rf docs && typedoc",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "link": "lerna link",
        "lint": "eslint --ext .ts . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint:fix": "eslint --fix --ext .ts . && yarn fmt",
        "nuke": "shx rm -rf {.,packages/**/*}/{node_modules,dist}",
        "prepare": "husky",
        "publish": "lerna publish from-package",
        "test": "lerna run test"
    },
    "lint-staged": {
        "**/*.+(js|json|md|mdx|ts|tsx)": "prettier --write",
        "**/package.json": "sort-package-json"
    },
    "devDependencies": {
        "@changesets/cli": "2.27.1",
        "@testing-library/jest-dom": "6.1.3",
        "@testing-library/react": "14.0.0",
        "@trivago/prettier-plugin-sort-imports": "4.2.0",
        "@types/eslint": "8.44.2",
        "@types/eslint-plugin-prettier": "3.1.0",
        "@types/jest": "29.5.4",
        "@types/node": "18.16.14",
        "@types/prettier": "2.7.3",
        "@typescript-eslint/eslint-plugin": "6.7.0",
        "@typescript-eslint/parser": "6.7.0",
        "cross-env": "7.0.3",
        "eslint": "8.49.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-unused-imports": "2.0.0",
        "gh-pages": "6.0.0",
        "husky": "9.0.11",
        "jest": "29.6.4",
        "jest-environment-jsdom": "29.6.4",
        "lerna": "6.6.2",
        "lint-staged": "15.2.7",
        "prettier": "2.8.8",
        "shx": "0.3.4",
        "sort-package-json": "2.10.0",
        "ts-jest": "29.1.1",
        "ts-node": "10.9.2",
        "tsup": "7.2.0",
        "typedoc": "0.25.1",
        "typescript": "5.2.2",
        "vitest": "1.0.2"
    },
    "engines": {
        "node": ">= 10"
    }
}
